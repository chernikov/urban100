@model IList<Owner>
@{
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "urban100";
}
<ul class="content">
    <div id="PopupWrapper">
        @Html.Action("AddPopup", "Home")
    </div>
    <li class="slide slide1" id="slide1" data-id="1">
        <div id="content1" class="wrapper hundred-wrapper">
            <div class="persons-table">
                <div class="logo"></div>
                <div class="row">
                    <div class="cell"></div>
                    <div class="cell"></div>
                    @for (int i = 0; i < 13; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active up @(i < 2 ? "left" : "") @(i > 8 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    <div class="cell"></div>
                    <div class="cell"></div>
                    @for (int i = 13; i < 26; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active up @(i < 15 ? "left" : "") @(i > 21 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    @for (int i = 26; i < 41; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active @(i < 30 ? "left" : "") @(i > 36 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    @for (int i = 41; i < 56; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active @(i < 45 ? "left" : "") @(i > 51 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    @for (int i = 56; i < 71; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active @(i < 60 ? "left" : "") @(i > 66 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    @for (int i = 71; i < 86; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active @(i < 75 ? "left" : "") @(i > 81 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                </div>
                <div class="row">
                    @for (int i = 86; i < 100; i++)
                    {
                        if (Model.Any(p => p.Cell == i))
                        {
                    <div class="cell active @(i < 90 ? "left" : "") @(i > 96 ? "right" : "")">
                        <img src="@Model.First(p => p.Cell == i).Image?w=120&h=120&mode=crop" />
                        @Html.Partial("Tooltip", @Model.First(p => p.Cell == i))
                    </div>
                        }
                        else
                        {
                    <div class="cell"></div>
                        }
                    }
                    <button class="add" id="ShowAddPopup"></button>
                </div>
            </div>
            <div class="progress-line">
                <div class="progressed" style="width: @(Model.Count * 18)px;"></div>
            </div>
            <div class="progress-info">
                @Model.Count / 100
            </div>
        </div>
    </li>
    <li class="slide slide2" id="slide2" data-id="2">
        <div class="wrapper idea-wrapper">
            <h1>
                Ідея проекту
            </h1>
            <p>
                Створити громадський ресторан в Івано-Франківську  у форматі «Urban Space», що стане успішним прикладом об’єднання громади навколо спільної ідеї.
            </p>
            <p>
                Унікальність проекту полягає в тому, що прибуток  ресторану направляється винятково на реалізацію громадських проектів міста. А засновниками є 100 соціально активних людей, що об’єднані ідеєю якісного розвитку міського простору.
            </p>
            <div class="logo"></div>
        </div>
    </li>
    <li class="slide slide3" id="slide3" data-id="3">
        <div class="wrapper urban-space-wrapper">
            <div class="inner-wrapper">
                <div class="urban-space">
                    <h1>Urban Space</h1>
                    <p>
                        Сучасний формат на  перетині різних міських середовищ. Ресторан, в якому можна не лише поїсти, а й поспілкуватись, обговорити ідеї, знайти однодумців. А ще почитати книгу, придбати щось в крамниці, яка працює в ресторані, чи організувати власну презентацію. Це своєрідне місце зустрічі урбаністів- тих,хто вважає, що місто має бути комфортним для життя: зеленим, екологічним, відповідним до інтересів громади.
                    </p>
                </div>
                <div class="progress-line">
                    <div class="progressed" style="width: 240px"></div>
                </div>
                <ul class="switcher">
                    <li class="item active" data-num="1"></li>
                    <li class="item" data-num="2"></li>
                    <li class="item" data-num="3"></li>
                </ul>
            </div>
            <div class="logo"></div>
        </div>
    </li>
    <li class="slide slide4" id="slide4" data-id="4">
        <div class="wrapper implementation-wrapper">
            <h1>
                Реалізація
            </h1>
            <p>
                Проект фінансують 100 засновників.
            </p>
            <p>
                Вони стають співвласниками громадського ресторану.
            </p>
            <p>
                Розробку концепції, реалізацію проекту та відкриття закладу, а також поточне управління діяльністю забезпечує компанія «23 ресторани».
            </p>
            <div class="logo"></div>
        </div>
    </li>
    <li class="slide slide5" id="slide5" data-id="5">
        <div class="wrapper how-work-wrapper">
            <h1>
                Як це працює
            </h1>
            <p>
                Ресторан працює та генерує прибуток, який направляється виключно на реалізацію громадських проектів, що розвивають та покращують міське середовища Івано-Франківська.
            </p>
            <p>
                Рішення про те, які проекти підтримати, приймають акціонери.
            </p>
            <p>
                Операційне управління Urban Space 100 забезпечує компанія «23 Ресторани».
            </p>
            <div class="logo"></div>
        </div>

    </li>
    <li class="slide slide6" id="slide6" data-id="6">
        <div class="wrapper join-wrapper">
            <h1>
                Долучитися
            </h1>
            <h3>
                Підтримай проект та стань співзасновником ресторану Urban Space 100.
            </h3>

            <ul class="join-list">
                <li class="join_1">
                    збери три лайки від учасників
                </li>
                <li class="join_2">
                    одноразовий безповоротний внесок
                    в розмірі 1000 $
                </li>
                <li class="join_3">
                    твори добро
                </li>
            </ul>
        </div>
    </li>
    <li class="slide slide7" id="slide7" data-id="7">
